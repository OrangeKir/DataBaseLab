<Window x:Class="DataBaseLab.SaleView.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseLab.BuyView"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="TaskWindow" Height="180" Width="300">
    <Grid>
        <TextBlock Margin="10,10,125,110" TextWrapping="Wrap" Text="Новое количество:" FontSize="18" VerticalAlignment="Center"/>
        <TextBox x:Name="DataField" PreviewTextInput="NumberValidationTextBox" Margin="175,10,10,110" TextWrapping="Wrap" Text="" FontSize="18" VerticalAlignment="Center"/>

        <Rectangle Fill="LightGray" Margin="175,60,10,60" MouseDown="Accept_MouseDown"/>
        <TextBlock Margin="175,60,10,60" Text="Принять" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="Accept_MouseDown"/>
        
        <Rectangle Fill="LightGray" Margin="175,110,10,10" MouseDown="Close_MouseDown"/>
        <TextBlock Margin="175,110,10,10" Text="Отмена" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="Close_MouseDown"/>

    </Grid>
</Window>
