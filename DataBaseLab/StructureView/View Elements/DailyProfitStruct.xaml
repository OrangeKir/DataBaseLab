<UserControl x:Class="DataBaseLab.StructureView.View_Elements.DailyProfitStruct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataBaseLab.StructureView.View_Elements"
             mc:Ignorable="d" 
             Height="50" d:DesignWidth="650"
             Background="LightGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" Fill="DarkGray"/>
        <TextBlock x:Name="DateText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Date"/>
        <TextBlock x:Name="ProfitText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Profit" Grid.Column="1"/>
        <TextBlock x:Name="DayOfWeekText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Day of week" Grid.Column="2"/>
    </Grid>
</UserControl>
