<UserControl x:Class="DataBaseLab.StructureView.View_Elements.ManagerStruct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataBaseLab.StructureView.View_Elements"
             mc:Ignorable="d" 
             Height="50" d:DesignWidth="650"
             Background="LightGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" Fill="DarkGray"/>

        <TextBlock x:Name="IdText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Id"/>
        <TextBlock x:Name="ManagerNameText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Manager name" Grid.Column="1"/>
        <TextBlock x:Name="CurentProfitText" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Curent profit" Grid.Column="2"/>
    </Grid>
</UserControl>
